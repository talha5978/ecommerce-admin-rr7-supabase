{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@ecom/shared/*": ["shared/src/*"]
		},
		"skipLibCheck": true,
		"target": "ES2020",
		"module": "ES2022",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"strict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	}
}
